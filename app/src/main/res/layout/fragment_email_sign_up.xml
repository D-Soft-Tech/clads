<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emailSignUpDisplayPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sky_blue"
    tools:context=".EmailSignUpFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/create_an_account"
                android:textColor="@color/text_color"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:text="@string/lets_get_to_know_you"
                android:textColor="@color/text_color" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                app:boxBackgroundColor="@color/sky_blue"
                app:endIconTint="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/box_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="-1dp"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/first_name"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundColor="@color/sky_blue"
                app:endIconTint="@color/text_color">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/box_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="-1dp"
                    android:inputType="textPersonName"
                    android:hint="@string/last_name"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundColor="@color/sky_blue"
                app:endIconTint="@color/eye_icon">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/box_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:inputType="textPersonName"
                    android:paddingStart="-1dp"
                    android:hint="@string/other_name"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/account_category_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="18dp"
                android:hint="@string/choose_account_category"
                android:orientation="horizontal"
                android:textColorHint="@color/text_color"
                app:boxBackgroundColor="@color/sky_blue"
                app:boxBackgroundMode="filled"
                app:endIconDrawable="@drawable/ic_spinner_arrow_down_24"
                app:endIconTint="@color/eye_icon"
                app:hintTextColor="@color/text_color">

                <AutoCompleteTextView
                    android:id="@+id/account_category_filled_dropdown"
                    style="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="-1dp"
                    android:layout_weight="1"
                    android:background="@color/sky_blue"
                    android:inputType="none"
                    android:shadowColor="#000000"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundColor="@color/sky_blue"
                app:endIconTint="@color/eye_icon">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/box_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="-1dp"
                    android:hint="@string/email_address"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/text_color"
                    android:textColorHint="@color/text_color"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundColor="@color/sky_blue"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/text_color"
                app:hintTextColor="@color/text_color">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/box_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="-1dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/text_color"
                app:boxBackgroundColor="@color/sky_blue"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/eye_icon"
                app:hintTextColor="@color/text_color">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/box_style2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="-1dp"
                    android:inputType="textPassword"
                    android:hint="@string/confirm_password"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />


            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="18dp"
                android:backgroundTint="@color/text_color"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:textColor="@color/sky_blue"
                app:cornerRadius="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/have_an_account"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/login"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>