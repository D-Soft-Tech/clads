<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_splash_screen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/splash_screen_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/splash_screen_image_margin_start"
        android:layout_marginTop="@dimen/splash_screen_image_margin_top"
        android:layout_marginEnd="@dimen/splash_screen_image_margin_end"
        android:src="@drawable/sewing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splash_screen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/splash_screen_text_margin_start"
        android:layout_marginTop="@dimen/splash_screen_text_margin_top"
        android:layout_marginEnd="@dimen/splash_screen_text_margin_end"
        android:fontFamily="@font/monoton"
        android:text="@string/clads"
        android:textAppearance="@style/clads"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<!--    <ProgressBar-->
<!--        android:id="@+id/splash_screen_progressBar"-->
<!--        style="?android:attr/progressBarStyle"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="@dimen/splash_screen_progress_bar_margin_top"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/splash_screen_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/splash_screen_progress_bar_margin_top"
        android:src="@drawable/progress_bar_gif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/splash_screen_loading_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/splash_screen_loading_text_margin_top"
        android:layout_marginBottom="@dimen/splash_screen_loading_text_margin_bottom"
        android:fontFamily="@font/poppins_bold"
        android:gravity="top"
        android:text="@string/loading_"
        android:textAppearance="@style/loading_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_screen_progressBar" />


</androidx.constraintlayout.widget.ConstraintLayout>